<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Sales\Api\Data\OrderInterface">
        <attribute code="base_rwp_amount" type="float" />
        <attribute code="rwp_amount" type="float" />
    </extension_attributes>

    <!--    Add extension_attribute REST Api-->
    <extension_attributes for="Magento\Customer\Api\Data\CustomerInterface">
        <attribute code="rwp_website_id" type="int" />
        <attribute code="rwp_point" type="float" />
        <attribute code="rwp_point_used" type="float" />
        <attribute code="rwp_point_expired" type="float" />
        <attribute code="rwp_amount" type="float" />
        <attribute code="rwp_notify_balance" type="int" />
        <attribute code="rwp_notify_expiration" type="int" />
        <attribute code="rwp_rate_point" type="float" />
    </extension_attributes>

    <extension_attributes for="Magento\Quote\Api\Data\TotalsInterface">
        <attribute code="base_rwp_amount" type="float" />
        <attribute code="earn_points" type="float" />
        <attribute code="rwp_note" type="string" />
        <attribute code="spend_points" type="float" />
        <attribute code="rwp_amount" type="float" />
    </extension_attributes>
</config>
